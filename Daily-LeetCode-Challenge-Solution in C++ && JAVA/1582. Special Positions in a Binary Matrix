1582. Special Positions in a Binary Matrix


13 Dec 2023


Easy



C++:


class Solution {
public:
    int numSpecial(vector<vector<int>>& mat) {
        int res = 0;
        int n = mat.size();
        int m = mat[0].size();
        vector<int> rowCount(n);
        vector<int> colCount(m);
        for(int i=0; i<n; i++){
            for(int j=0; j<m; j++){
                if(mat[i][j] == 1){
                    rowCount[i]++;
                    colCount[j]++;
                }
            }
        }
        for(int i=0; i<n; i++){
            for(int j=0; j<m;j++){
                if(mat[i][j] == 1 && rowCount[i] == 1 && colCount[j] == 1) res++;
            }
        }
        return res;
    }
};

